<% layout("layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                  <h3> <%= listing.title %></h3>
            </div>
             <div class="col-6 offset-2">
                        <div class="card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="card-img">
            <div class="card-body">
                <p class="card-text"> 
                   <br>
                   <%= listing.description %>
                   <br>
                    &#8377;<%= Number(listing.price).toLocaleString("en-IN") %>
                    <br>
                     <%= listing.location %>     
                     <br>         
                       <%= listing.country %>

                </p>
            </div>
        </div>
             </div>
 
        </div>
        <div class="show-page-btn col-6 offset-2">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
          <div >
             <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn delete-btn btn-dark">Delete</button>
        </form>
          </div>
          
        </div>
       
        <div class="col-8 offset-2">
          <hr>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews?_method=POST" method="POST">
            <div class="mb-3 mt-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3 mt-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea id="comment" cols="100" rows="3"
              class="form-control" name="review[comment]"></textarea>
            </div>
            <button class="btn btn-outline-dark mb-3">Submit</button>
          </form>

          <hr>
          <p><b>All Reviews</b></p>
          <div class="row ">
              <% for(review of listing.reviews) { %>
              <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                  <h5 class="card-title">Rosy Willy</h5>
                   <p class="card-text"><%= review.comment %> </p>
                <p class="card-text"> <b><%= review.rating %></b> Stars</p>
                </div>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" >
                  <button class="btn btn-dark mb-3 mt-2">Delete</button>
                </form>
              </div>
              <% } %>
        
          </div>
          
           
         
          
        </div>
       
    </body>