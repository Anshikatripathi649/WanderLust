<% layout("layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h4 class="mt-2">Edit Your Listings</h4>
                <form 
                action="/listings/<%= listing._id %>?_method=PUT" 
                method="POST" class="needs-validation" novalidate>
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="listing[title]" value="<%= listing.title %>"
                        required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">Descreption</label>
                        <textarea class="form-control" 
                        name="listing[description]" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                    <div class="mb-2">
                        <label for="image" class="form-label">Image</label>
                        <input type="text" 
                        class="form-control" 
                        name="listing[image]" 
                        value="<%= listing.image %>" 
                        required/>
                        <div class="invalid-feedback">Please enter a valid image URL</div>
                    </div>
                    <div class="row">
                        <div class="mb-2 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input  type="number"  class="form-control" name="listing[price]"
                                value="<%= listing.price %>"
                                required>
                               <div class="invalid-feedback">Price should be valid</div>
                        </div>
                        <div class=" md-2 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input  class="form-control" name="listing[country]"
                                value="<%= listing.country %>"
                                required 
                                type="text">
                                 <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" name="listing[location]"
                            value="<%= listing.location %>" 
                            required 
                            type="text">
                             <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <button class="btn btn-dark edit-btn mb-3">Edit</button>
                </form>
            </div>

        </div>
        <!-- <script src="/js/script.js"></script> -->
    </body>